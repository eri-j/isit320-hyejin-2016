extends layout

include mixins
include mixin-inputs
include mixin-radios

block content
  h1= title
  p Welcome to #{title}

  +attribution

  +bio

  +elfFormPanel("Main Form")#target

    +elfRadioPanel("Radio Buttons")
      +elfRadio("Radio1", "option1")
      +elfRadio("Radio2", "option2")
      +elfRadio("Radio3", "seven samurai")
      +elfRadio("Radio4", "ran")
      +elfRadio("Radio5", "rashomon")
      +elfRadio("Radio6", "high & low")
      +elfRadio("Radio7", "ikiru")

    +elfPanel("CheckBoxes")
      +elfCheckBox("CheckBox 01", "checkBox01", "checkBox01")#checkBox01
      +elfCheckBox("CheckBox 02", "checkBox02", "checkBox02")#checkBox02
      +elfCheckBox("CheckBox 03", "checkBox03", "kurosawa")#checkBox03
      +elfCheckBox("CheckBox 04", "checkBox04", "tolstoy")#checkBox04
      +elfCheckBox("CheckBox 05", "checkBox05", "mifune")#checkBox05

    +elfPanel("Input")
      +elfInput("Enter a name", "subject", "Enter a subject")#subject.form-control

    +elfPanel("Actions")
      input.btn.btn-primary(type="submit", value="Go")

  div
    pre#formResults

  div
    pre#serverResults